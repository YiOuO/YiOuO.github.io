}

@article{zhanEnhancedNumericalWave2025,
  title = {An Enhanced Numerical Wave Tank for Wave-Structure Interaction Based on {{DualSPHysics}}+},
  author = {Zhan, Yi and Luo, Min and Khayyer, Abbas},
  year = 2025,
  journal = {Ocean Engineering},
  volume = {340},
  pages = {122413},
  doi = {10.1016/j.oceaneng.2025.122413},
  abstract = {Wave-structure interaction (WSI) is a fundamental problem in coastal and ocean engineering. In this paper, an enhanced numerical wave tank for WSI simulations (including both rigid and elastic structures) is developed based on the open-source Smoothed Particle Hydrodynamics (SPH) software DualSPHysics+. The {$\delta$}-SPH density diffusion term is combined with a Riemann-based dissipation term ({$\delta$}R-SPH) to mitigate unphysical energy dissipation and thereby reduce wave attenuation. To suppress numerical pressure oscillations during the WSI process, the combination of Hyperbolic/Parabolic Divergence Cleaning (HPDC) and Velocity Divergence Error Mitigation (VEM) is adopted. The Volume Conservation Shifting (VCS) scheme is employed to enhance volume conservation during long-distance wave propagation, while the Optimized Particle Shifting (OPS) scheme is incorporated to improve the distribution of free surface particles. To improve the reliability of the structural model, the momentum equation is discretized to second order. A dynamic hourglass control scheme and Riemann stabilization term are implemented to suppress spurious zero-energy modes. The developed numerical wave tank is validated against multiple two- and three-dimensional benchmark examples. By incorporating the enhanced schemes in both fluid and structural fields, the processes of wave generation, propagation, and interaction with the structure can be reproduced with higher accuracy and enhanced physical consistency.},
  langid = {english},
  file = {/Users/abc/Zotero/storage/DAIZYPD5/Zhan - 2025 - An enhanced numerical wave tank for wave-structure.pdf;/Users/abc/Zotero/storage/XRJNMLBC/DualSPHysics+_NWT_Clean.docx}
}

